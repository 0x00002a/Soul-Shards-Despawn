{
  "schema_version": 1,
  "id": "soulshards",
  "quilt_loader": {
    "intermediate_mappings": "net.fabricmc:intermediary",
    "group": "${group}",
    "id": "soulshards",
    "version": "${version}",
    "metadata": {
      "name": "Soul Shards Despawn",
      "description": "Powerful spawners for any mob!",
      "contributors": {
        "0x00002a": "Author"
      },
      "license": "MIT",
      "icon": "assets/soulshards/icon.png"
    },
    "entrypoints": {
      "init": [
        "info.x2a.soulshards.quilt.QuiltSoulShards"
      ],
      "client_init": [
        "info.x2a.soulshards.quilt.QuiltSoulShardsClient"
      ],
      "modmenu": [
        "info.x2a.soulshards.compat.modmenu.SoulShardsModMenu"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": "=${minecraft_version}"
      },
      {
        "id": "architectury",
        "version": ">=${architectury_version}"
      },
      {
        "id": "modmenu",
        "version": ">=${modmenu_version}",
        "optional": true
      },
      {
        "id": "cloth-config",
        "version": ">=${cloth_config_version}",
        "optional": true
      },
      {
        "id": "jei",
        "version": ">=${jei_version}",
        "optional": true
      }
    ]
  },
  "mixin": "soulshards.mixins.json",
  "waila:plugins": {
    "id": "soulshards",
    "initializer": "info.x2a.soulshards.compat.waila.SoulShardsWailaPlugin"
  }
}
