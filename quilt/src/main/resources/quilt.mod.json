{
  "schema_version": 1,
  "id": "soulshards",
  "quilt_loader": {
    "intermediate_mappings": "net.fabricmc:intermediary",
    "group": "${group}",
    "id": "soulshards",
    "version": "${version}",
    "metadata": {
      "name": "Soul Shards Despawn",
      "description": "Powerful spawners for any mob!",
      "contributors": {
        "0x00002a": "Author"
      },
      "license": "MIT",
      "icon": "assets/soulshards/icon.png"
    },
    "entrypoints": {
      "init": [
        "info.n4tomic.soulshards.quilt.QuiltSoulShards"
      ],
      "client_init": [
        "info.n4tomic.soulshards.quilt.QuiltSoulShardsClient"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.19.2"
      },
      {
        "id": "architectury",
        "version": ">=6.2.43"
      }
    ]
  },
  "mixin": "soulshards.mixins.json",
  "waila:plugins": {
    "id": "soulshards",
    "initializer": "info.n4tomic.soulshards.compat.waila.SoulShardsWailaPlugin"
  }
}
